{% if object.information_attachments is not empty %}
  <div class="event-detail event-attachments">
    <h3>{{ __("Downloads", "clarkson-theme") }}</h3>
    {% for attachment in object.information_attachments %}
      <article class="attachment-item">
        <div class='attachment-description-container'>
          <p class='attachment-title'>{{ __("Download", "clarkson-theme") }}: <a href='{{ attachment.attachment.url }}'>{{ attachment.title }}</a>
              {% if object.get_readable_filesize( attachment.attachment.ID ) is not empty %}
                  <span class='attachment-size'>({{ object.get_readable_filesize( attachment.attachment.ID ) }})</span>
              {% endif %}
          </p>
        </div>
        <div class='attachment-download-container'>
          <a href='{{ attachment.attachment.url }}' class='button button-download-attachment' target="_blank">{{ __("Download", "clarkson-theme") }}</a>
        </div>
      </article>
    {% endfor %}
  </div>
{% endif %}